            <a asp-controller="Tournois" asp-action="Index" class="nav-link @(ViewData["ActivePage"]?.ToString() == "Tournois" ? "active" : "")">
                <span class="nav-icon">ğŸ†</span> Tournois
            </a>
            <a asp-controller="Participations" asp-action="Index" class="nav-link @(ViewData["ActivePage"]?.ToString() == "Participations" ? "active" : "")">
                <span class="nav-icon">ğŸ“‹</span> Participations
            </a>
        </nav>
        <div class="sidebar-footer">
            <a asp-controller="Auth" asp-action="Logout" class="btn-logout">
                <span class="nav-icon">ğŸšª</span> DÃ©connexion
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="main-wrapper">
        <!-- Header -->
        <header class="app-header">
            <div class="header-title">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="header-user">
                <button class="user-dropdown-btn" onclick="toggleUserDropdown()">
                    <span class="user-name">@Context.Session.GetString("AdminNom")</span>
                    <span class="user-avatar">ğŸ‘¤</span>
                    <span class="dropdown-arrow">â–¼</span>
                </button>
                <div class="user-dropdown-menu" id="userDropdown">
                    <a asp-controller="Auth" asp-action="Logout" class="dropdown-item">
