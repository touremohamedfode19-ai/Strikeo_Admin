@{
    ViewData["Title"] = "Ajouter un Joueur";
    ViewData["ActivePage"] = "Joueurs";
}

<div class="page-header">
    <h2>Ajouter un Joueur</h2>
    <a asp-controller="Joueurs" asp-action="Index" class="btn-secondary">← Retour à la liste</a>
</div>

<div class="form-card">
    @if (ViewBag.MessageErreur != null)
    {
        <div class="alert alert-danger">@ViewBag.MessageErreur</div>
    }
    
    <form asp-controller="Joueurs" asp-action="Ajouter" method="post">
        <div class="form-group">
            <label for="nom">Nom</label>
            <input type="text" class="form-control" id="nom" name="nom" required />
        </div>

        <div class="form-group">
            <label for="prenom">Prénom</label>
            <input type="text" class="form-control" id="prenom" name="prenom" required />
        </div>

        <div class="form-group">
            <label for="age">Âge</label>
            <input type="number" class="form-control" id="age" name="age" min="1" required />
        </div>

        <div class="form-group">
            <label for="mail">Email</label>
            <input type="email" class="form-control" id="mail" name="mail" required />
        </div>

        <div class="form-group">
            <label for="tel">Téléphone</label>
            <input type="tel" class="form-control" id="tel" name="telephone" required 
                   pattern="[\+]?[0-9\s\-\.]{8,15}" 
                   title="Numéro de téléphone valide (8 à 15 chiffres)" 
                   placeholder="Ex: 06 12 34 56 78" />
        </div>

        <div class="form-group">
            <label for="equipe">Équipe (optionnel)</label>
            <select class="form-control" id="equipe" name="idEquipe">
                <option value="">-- Sans équipe --</option>
                @{
                    var placesDisponibles = (Dictionary<int, int>)ViewBag.PlacesDisponibles;
                }
                @foreach (var equipe in (List<Equipe>)ViewBag.LesEquipes)
                {
                    int places = placesDisponibles.ContainsKey(equipe.Idequipe) ? placesDisponibles[equipe.Idequipe] : 0;
                    bool estComplet = places <= 0;
                    
                    if (estComplet)
                    {
                        <option value="@equipe.Idequipe" disabled>@equipe.Nom_equipe (Complète)</option>
                    }
                    else
                    {
                        <option value="@equipe.Idequipe">@equipe.Nom_equipe (@places place(s) disponible(s))</option>
                    }
                }
            </select>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-primary">Ajouter le joueur</button>
            <a asp-controller="Joueurs" asp-action="Index" class="btn-secondary">Annuler</a>
        </div>
    </form>
</div>

<style>
    .form-card {
        background: var(--background-card);
        border-radius: 15px;
        padding: 30px;
        max-width: 500px;
        border: 1px solid var(--border-color);
    }
    .form-actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }
</style>
