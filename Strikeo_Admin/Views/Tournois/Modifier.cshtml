@{
    ViewData["Title"] = "Modifier un Tournoi";
    ViewData["ActivePage"] = "Tournois";
    var tournoi = (Tournoi)ViewBag.Tournoi;
}

<div class="page-header">
    <h2>Modifier le Tournoi</h2>
    <a asp-controller="Tournois" asp-action="Index" class="btn-secondary">← Retour à la liste</a>
</div>

<div class="form-card">
    <form asp-controller="Tournois" asp-action="Modifier" method="post">
        <input type="hidden" name="id" value="@tournoi.Idtournoi" />

        <div class="form-group">
            <label for="designation">Désignation</label>
            <input type="text" class="form-control" id="designation" name="designation" 
                   value="@tournoi.Designation" required />
        </div>

        <div class="form-group">
            <label for="date">Date du tournoi</label>
            <input type="date" class="form-control" id="date" name="dateTournoi" 
                   value="@tournoi.Date_tournoi.ToString("yyyy-MM-dd")" required />
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="4">@tournoi.Description</textarea>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-primary">Enregistrer</button>
            <a asp-controller="Tournois" asp-action="Index" class="btn-secondary">Annuler</a>
        </div>
    </form>
</div>

<style>
    .form-card {
        background: var(--background-card);
        border-radius: 15px;
        padding: 30px;
        max-width: 500px;
        border: 1px solid var(--border-color);
    }
    .form-actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }
    textarea.form-control {
        resize: vertical;
    }
</style>
